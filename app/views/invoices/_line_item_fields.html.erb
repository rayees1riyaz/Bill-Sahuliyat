<div class="nested-form-wrapper bg-gray-50/30 p-6 rounded-2xl border border-gray-100 hover:border-brand-200 transition relative group mb-6" data-new-record="<%= f.object.new_record? %>">
  <div class="absolute -top-3 -right-3 hidden group-hover:block transition no-print">
    <button type="button" data-action="invoice-items#remove" class="p-2 bg-red-100 text-red-600 rounded-full hover:bg-red-600 hover:text-white transition shadow-lg border-2 border-white">
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path></svg>
    </button>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-12 gap-x-6 gap-y-4 items-start">
    <div class="md:col-span-3">
      <%= f.label :description, "Product/Service Description", class: "block text-xs font-black text-gray-500 uppercase tracking-widest mb-1.5" %>
      <%= f.text_area :description, rows: 2, placeholder: "Description", class: "block w-full px-4 py-3 bg-white border border-gray-200 rounded-xl focus:ring-2 focus:ring-brand-500 focus:border-brand-500 transition font-medium text-sm shadow-sm" %>
    </div>

    <div class="md:col-span-3">
      <%= f.label :serial_number, "Serial/IMEI Number", class: "block text-xs font-black text-gray-500 uppercase tracking-widest mb-1.5" %>
      <%= f.text_field :serial_number, placeholder: "IMEI/SN", class: "block w-full px-4 py-3 bg-white border border-gray-200 rounded-xl focus:ring-2 focus:ring-brand-500 focus:border-brand-500 transition font-medium text-sm shadow-sm" %>
    </div>

    <div class="md:col-span-2">
      <%= f.label :hsn_code, "HSN Code", class: "block text-xs font-black text-gray-500 uppercase tracking-widest mb-1.5" %>
      <%= f.text_field :hsn_code, placeholder: "HSN", class: "block w-full px-4 py-3 bg-white border border-gray-200 rounded-xl focus:ring-2 focus:ring-brand-500 focus:border-brand-500 transition font-medium text-sm shadow-sm uppercase" %>
    </div>

    <div class="md:col-span-2">
      <%= f.label :quantity, "Qty", class: "block text-xs font-black text-gray-500 uppercase tracking-widest mb-1.5" %>
      <%= f.number_field :quantity, class: "block w-full px-4 py-3 bg-white border border-gray-200 rounded-xl focus:ring-2 focus:ring-brand-500 transition font-black text-sm text-center shadow-sm" %>
    </div>

    <div class="md:col-span-2">
      <%= f.label :unit_price, "Selling Price (Incl. Tax)", class: "block text-xs font-black text-gray-500 uppercase tracking-widest mb-1.5" %>
      <%= f.number_field :unit_price, step: 0.01, placeholder: "0.00", class: "block w-full px-4 py-3 bg-white border border-gray-200 rounded-xl focus:ring-2 focus:ring-brand-500 transition font-black text-sm text-right shadow-sm" %>
    </div>

    <div class="md:col-span-12 grid grid-cols-2 md:grid-cols-4 gap-6 pt-4 mt-2 border-t border-gray-100">
      <div class="md:col-start-3">
        <%= f.label :cgst_rate, "CGST Rate (%)", class: "block text-xs font-black text-gray-500 uppercase tracking-widest mb-1.5" %>
        <div class="relative">
          <%= f.number_field :cgst_rate, step: 0.01, class: "block w-full pl-10 pr-4 py-2.5 bg-gray-50/50 border border-gray-200 rounded-lg focus:ring-2 focus:ring-brand-500 transition font-bold text-sm shadow-inner" %>
          <div class="absolute inset-y-0 left-3 flex items-center pointer-events-none text-brand-600 font-bold text-sm">%</div>
        </div>
      </div>
      <div>
        <%= f.label :sgst_rate, "SGST Rate (%)", class: "block text-xs font-black text-gray-500 uppercase tracking-widest mb-1.5" %>
        <div class="relative">
          <%= f.number_field :sgst_rate, step: 0.01, class: "block w-full pl-10 pr-4 py-2.5 bg-gray-50/50 border border-gray-200 rounded-lg focus:ring-2 focus:ring-brand-500 transition font-bold text-sm shadow-inner" %>
          <div class="absolute inset-y-0 left-3 flex items-center pointer-events-none text-brand-600 font-bold text-sm">%</div>
        </div>
      </div>
    </div>
  </div>
  <%= f.hidden_field :_destroy %>
</div>
